<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f0f0f0" 
    android:paddingEnd="10dip"
    android:paddingStart="10dip"
    android:paddingBottom="10dip"
    android:paddingTop="10dip">
     
    <TextView 
        android:id="@+id/chatlist_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dip"
        android:layout_alignParentStart="true"
         android:drawableTop="@drawable/chat_avatar"
        android:text="用户名"/>
      
      <RelativeLayout
          android:layout_toEndOf="@id/chatlist_other"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
      <TextView   
        android:id="@+id/chatlist_time_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"/>
    <TextView   
        android:id="@+id/chatlist_text_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chatlist_time_other"
        android:text="消息内容"/>
    
    </RelativeLayout>
    

</RelativeLayout>